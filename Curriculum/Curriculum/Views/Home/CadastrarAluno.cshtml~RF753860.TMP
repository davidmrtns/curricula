
@{
    ViewBag.Title = "CadastrarAluno";
    Curriculum.Models.Usuario u = (Curriculum.Models.Usuario)Session["Usuario"];
}

@if (u == null && Model != null)
{
    <p class="mensagem">@TempData["msg"]</p>

    <h2 class="titulo">Cadastrar usuário</h2>

    <h2 class="subtitulo">Preencha os campos abaixo com seus dados</h2>

    <form method="post" class="login centro">
        <div class="divisao3 esquerda">
            <h2 class="rotulo">Nome:</h2>
            <input type="text" placeholder="Nome" name="nome" id="campoNome" />
            <p id="pCampoNome">0</p>
        </div>

        <div class="divisao3 esquerda">
            <h2 class="rotulo">Sobrenome:</h2>
            <input type="text" placeholder="Sobrenome" name="sobrenome" id="campoSobrenome" />
            <p id="pCampoSobrenome">0</p>
        </div>

        <div class="divisao3 esquerda">
            <h2 class="rotulo">Data de nascimento:</h2>
            <input type="date" name="dataNascimento" min="1930-01-01" max="2020-01-01" value="2000-01-01" />
        </div>

        <div class="divisao3 esquerda">
            <h2 class="rotulo">Telefone:</h2>
            <input type="text" placeholder="Telefone" name="telefone" class="tel" />
        </div>

        <div class="divisao3 esquerda">
            <h2 class="rotulo">Bairro:</h2>
            <input type="text" placeholder="Bairro" name="bairro" />
            <p id="pCampoBairro">0</p>
        </div>

        <div class="divisao3 esquerda">
            <h2 class="rotulo">Cidade:</h2>
            <input type="text" placeholder="Cidade" name="cidade" />
        </div>

        <div class="divisao3 esquerda">
            <h2 class="rotulo">Estado:</h2>
            <select name="estado">
                <option value="">--</option>
                <option value="AC">AC</option>
                <option value="AL">AL</option>
                <option value="AP">AP</option>
                <option value="AM">AM</option>
                <option value="BA">BA</option>
                <option value="CE">CE</option>
                <option value="DF">DF</option>
                <option value="ES">ES</option>
                <option value="GO">GO</option>
                <option value="MA">MA</option>
                <option value="MT">MT</option>
                <option value="MS">MS</option>
                <option value="MG">MG</option>
                <option value="PA">PA</option>
                <option value="PB">PB</option>
                <option value="PR">PR</option>
                <option value="PE">PE</option>
                <option value="PI">PI</option>
                <option value="RJ">RJ</option>
                <option value="RN">RN</option>
                <option value="RS">RS</option>
                <option value="RO">RO</option>
                <option value="RR">RR</option>
                <option value="SC">SC</option>
                <option value="SP">SP</option>
                <option value="SE">SE</option>
                <option value="TO">TO</option>
            </select>
        </div>

        <div class="divisao3 esquerda">
            <h2 class="rotulo">CEP:</h2>
            <input type="text" placeholder="CEP" name="cep" class="cep" />
        </div>

        <div class="divisao3 esquerda">
            <h2 class="rotulo">Curso realizado:</h2>
            <select name="cursoRealizado">
                <option value="">--</option>
                @foreach (Curriculum.Models.Curso c in Model)
                {
                    <option value=@c.AbrevCurso>@c.NomeCurso (@c.AbrevCurso)</option>
                }
            </select>
        </div>

        <div class="divisao3 esquerda">
            <h2 class="rotulo">Currículo:</h2>
            <input type="file" name="arquivo" />
        </div>

        <div class="divisao3 esquerda">
            <h2 class="rotulo">Nome de usuário:</h2>
            <input type="text" placeholder="Nome de usuário" name="nomeUsuario" />
            <p>O nome de usuário pode conter letras, números, pontos (.) e underlines (_) e deve ter
            entre 5 e 20 caracteres.</p>
        </div>

        <div class="divisao3 esquerda">
            <h2 class="rotulo">Senha:</h2>
            <input type="password" placeholder="Senha" name="senha" class="senha" />
            <input type="password" placeholder="Confirme a senha" name="confirmacao" class="senha" />
            <i class="fa fa-eye" aria-hidden="true" id="verSenha"></i>
        </div>

        <div class="divisao3 esquerda">
            <input class="botao-cliente" type="submit" value="Cadastrar" />
        </div>
        <div class="limpar"></div>
    </form>
}
else
{
    <h2 class="titulo">Nada para mostrar aqui :(</h2>
}



